// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String
  mail String
  pw String
  salt String
  idx Int @unique @default(autoincrement())
}

model Balance {
  ownerId Int
  krw BigInt @default(0)
  usd Int @default(0)
  coins Json @default("{}")
  idx Int @unique @default(autoincrement())
}
